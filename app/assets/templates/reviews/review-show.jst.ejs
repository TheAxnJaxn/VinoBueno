
<li class="rating">
  <span title="5" class="<%= (review.get('rating') >= 5) ? 'star-on' : 'star-off' %>">&#x2605;</span>
  <span title="4" class="<%= (review.get('rating') >= 4) ? 'star-on' : 'star-off' %>">&#x2605;</span>
  <span title="3" class="<%= (review.get('rating') >= 3) ? 'star-on' : 'star-off' %>">&#x2605;</span>
  <span title="2" class="<%= (review.get('rating') >= 2) ? 'star-on' : 'star-off' %>">&#x2605;</span>
  <span title="1" class="<%= (review.get('rating') >= 1) ? 'star-on' : 'star-off' %>">&#x2605;</span>
</li>

<li>
  <%= review.escape('review') %>
</li>
