<div class="m-background"></div>

<div class="m-content">
  <button class="close">&times;</button>
<h3>Review</h3>
  <form>
    <input type="hidden" name="review[review][wine_id]" value="<%= wine.id %>">

  <p>
    <ul class="list-unstyled"><li class="rating">
      <a href="#" title="5" class="star-click">&#x2605;</a>
      <a href="#" title="4" class="star-click">&#x2605;</a>
      <a href="#" title="3" class="star-click">&#x2605;</a>
      <a href="#" title="2" class="star-click">&#x2605;</a>
      <a href="#" title="1" class="star-click">&#x2605;</a>
      <input type="hidden" name="review[review][rating]" value="<%= review.escape('rating') %>">
    </li></ul>
  </p>

    <p>
      <textarea name="review[review][review]" rows="10" cols="50" placeholder="Review"></textarea>
    </p>

    <input type="submit" class="btn btn-primary" value="Submit">
  </form>
</div>
