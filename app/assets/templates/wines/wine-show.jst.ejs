<div class='wine-detail-subview'>
  <table>
    <tr>

      <td class="wine-img">
        <img src="<%= wine.escape('img_url_thumb') %>" alt="" />

        <!-- Split button -->
        <div class="btn-group">
          <button type="button" class="btn btn-danger">Add to Cellar</button>
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
          </ul>
        </div>

        <br/>
      </td>

      <td class="wine-mini-deets">
        <ul class="list-unstyled">
          <li><h2><%= wine.escape('name') %></h2></li>
          <li><b>By:</b> <%= wine.escape('maker') %></li>

          <li class="rating">
            <span title="1" class="<%= (wine.get('avg_rev') >= 5) ? 'star-on' : 'star-off' %>">&#x2605;</span>
            <span title="2" class="<%= (wine.get('avg_rev') >= 4) ? 'star-on' : 'star-off' %>">&#x2605;</span>
            <span title="3" class="<%= (wine.get('avg_rev') >= 3) ? 'star-on' : 'star-off' %>">&#x2605;</span>
            <span title="4" class="<%= (wine.get('avg_rev') >= 2) ? 'star-on' : 'star-off' %>">&#x2605;</span>
            <span title="5" class="<%= (wine.get('avg_rev') >= 1) ? 'star-on' : 'star-off' %>">&#x2605;</span>
          </li>

          <li class="small-grey"> - <%= wine.escape('avg_rev') %> average rating - </li>

          <li><b>Description:</b> <%= wine.escape('description') %></li>
          <li><b>Type:</b> <%= wine.escape('wine_type') %></li>
          <li><b>Varietal:</b> <%= wine.escape('varietal') %></li>
          <% if (wine.get('grown')) { %>
            <li><b>Grown:</b> <%= wine.escape('grown') %></li>
          <% } %>
          <% if (wine.get('vintage')) { %>
            <li><b>Vintage:</b> <%= wine.escape('vintage') %></li>
          <% } %>
        </ul>
      </td>

    </tr>
  </table>
</div>

<div class="review-subview"></div>
